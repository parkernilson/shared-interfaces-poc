{
  "functions": [
    {
      "source": "svelte-app/functions",
      "codebase": "svelte-app",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ]
    },
    {
      "source": "functions",
      "codebase": "general-functions",
      "ignore": [
        "node_modules",
        ".git",
        "firebase-debug.log",
        "firebase-debug.*.log"
      ],
      "predeploy": [
        "shx rm -rf \"$RESOURCE_DIR/src/shared\"",
        "shx cp -R \"$PROJECT_DIR/shared/.\" \"$RESOURCE_DIR/src/shared\"",
        "npm --prefix \"$RESOURCE_DIR\" run build"
      ],
      "postdeploy": [
        "shx rm -rf \"$RESOURCE_DIR/src/shared\""
      ]
    }
  ],
  "hosting": {
    "public": "svelte-app/public",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      {
        "source": "**",
        "function": "ssrServer"
      }
    ]
  },
  "emulators": {
    "auth": {
      "port": 9099
    },
    "functions": {
      "port": 5001
    },
    "hosting": {
      "port": 5000
    },
    "ui": {
      "enabled": true
    },
    "singleProjectMode": true
  }
}
